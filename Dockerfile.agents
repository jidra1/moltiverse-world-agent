FROM node:20-alpine

WORKDIR /app

# Copy package files and agents
COPY package*.json ./
COPY agents/ ./agents/

# Install deps (agents only need fetch which is built-in to Node 20)
# No npm install needed - agents use native fetch

# Run all agents
CMD ["sh", "-c", "node agents/gatherer.js & node agents/warrior.js & node agents/builder.js & wait"]
